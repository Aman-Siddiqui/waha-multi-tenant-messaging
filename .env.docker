# App
PORT=3000

# Database (inside docker network use service name 'db' and default postgres port 5432)
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASS=root
DB_NAME=waham

# JWT (use long random secrets in real deploy)
JWT_SECRET=changeme_jwt_secret_here
JWT_REFRESH_SECRET=changeme_refresh_secret_here
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# WAHA (point the API to the waha service in the compose network)
WAHA_BASE=http://waha:3000
WAHA_API_KEY=testkey
WAHA_WEBHOOK_SECRET=testwebhook
